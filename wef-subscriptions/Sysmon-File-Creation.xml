<?xml version="1.0" encoding="UTF-8"?>
<Subscription xmlns="http://schemas.microsoft.com/2006/03/windows/events/subscription">
    <SubscriptionId>Sysmon-File-Creation</SubscriptionId>
    <SubscriptionType>SourceInitiated</SubscriptionType>
    <Description>Provides visibility of created files and streams</Description>
   <Enabled>true</Enabled>
    <Uri>http://schemas.microsoft.com/wbem/wsman/1/windows/EventLog</Uri>
    <ConfigurationMode>Custom</ConfigurationMode>
    <Delivery Mode="Push">
      <Batching>
        <MaxItems>1</MaxItems>
        <MaxLatencyTime>300000</MaxLatencyTime>
      </Batching>
      <PushSettings>
        <Heartbeat Interval="1800000"/>
      </PushSettings>
    </Delivery>
    <Query><![CDATA[
<QueryList>
  <!-- Creation of files and file streams -->
  <Query Id="0" Path="Microsoft-Windows-Sysmon/Operational">
    <Select Path="Microsoft-Windows-Sysmon/Operational">
    *[System[(EventID=11 or EventID=15)]]
    </Select>
  </Query>
</QueryList>
]]>
    </Query>
    <ReadExistingEvents>true</ReadExistingEvents>
    <TransportName>HTTP</TransportName>
    <ContentFormat>RenderedText</ContentFormat>
    <Locale Language="en-US"/>
    <LogFile>WEC8-Sysmon-File-Creation</LogFile>
   <AllowedSourceNonDomainComputers/>
  <AllowedSourceDomainComputers>O:NSG:NSD:(A;;GA;;;DC)(A;;GA;;;NS)(A;;GA;;;DD)</AllowedSourceDomainComputers>
</Subscription>

